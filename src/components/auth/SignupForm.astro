---
interface Props {
  redirectTo?: string;
}

const { redirectTo = '/dashboard' } = Astro.props;
---

<div class="signup-container">
  <div class="signup-side">
    <div class="side-content">
      <h2>Únete a Victoria CRM</h2>
      <p>Comienza a gestionar tu negocio hoy mismo</p>
      <ul class="features-list">
        <li>
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="20 6 9 17 4 12"></polyline>
          </svg>
          <span>Prueba gratis por 30 días</span>
        </li>
        <li>
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="20 6 9 17 4 12"></polyline>
          </svg>
          <span>Sin requerir tarjeta de crédito</span>
        </li>
        <li>
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="20 6 9 17 4 12"></polyline>
          </svg>
          <span>Soporte técnico disponible 24/7</span>
        </li>
      </ul>
    </div>
  </div>

  <div class="signup-box">
    <div class="signup-header">
      <div class="logo-icon">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 40 40" width="40" height="40">
          <circle cx="20" cy="20" r="18" fill="url(#gradient)" />
          <path d="M15 20L18 23L27 14" stroke="white" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" />
          <defs>
            <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="100%">
              <stop offset="0%" style="stop-color:#6366f1;stop-opacity:1" />
              <stop offset="100%" style="stop-color:#8b5cf6;stop-opacity:1" />
            </linearGradient>
          </defs>
        </svg>
      </div>
      <h1>Crear Cuenta</h1>
      <p>Regístrate en Victoria CRM</p>
    </div>

    <form id="signupForm" class="signup-form">
      <div class="form-group">
        <label for="fullName">Nombre Completo</label>
        <input
          type="text"
          id="fullName"
          name="fullName"
          placeholder="Tu nombre"
          required
        />
        <span class="error-message" id="fullNameError"></span>
      </div>

      <div class="form-group">
        <label for="email">Correo Electrónico</label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="tu@email.com"
          required
        />
        <span class="error-message" id="emailError"></span>
      </div>

      <div class="form-group">
        <label for="password">Contraseña</label>
        <input
          type="password"
          id="password"
          name="password"
          placeholder="••••••••"
          required
        />
        <div class="password-strength" id="passwordStrength"></div>
        <span class="error-message" id="passwordError"></span>
      </div>

      <div class="form-group">
        <label for="confirmPassword">Confirmar Contraseña</label>
        <input
          type="password"
          id="confirmPassword"
          name="confirmPassword"
          placeholder="••••••••"
          required
        />
        <span class="error-message" id="confirmPasswordError"></span>
      </div>

      <label class="terms-check">
        <input type="checkbox" name="terms" required />
        <span>Acepto los <a href="/terms">términos de servicio</a> y la <a href="/privacy">política de privacidad</a></span>
      </label>
      <span class="error-message" id="termsError"></span>

      <button type="submit" class="btn-signup" id="submitBtn">
        <span id="buttonText">Crear Cuenta</span>
        <span id="loadingSpinner" class="spinner hidden"></span>
      </button>

      <div class="message-box" id="messageBox"></div>
    </form>

    <div class="signup-footer">
      <p>¿Ya tienes cuenta? <a href="/auth/login">Inicia sesión aquí</a></p>
    </div>
  </div>
</div>

<script define:vars={{ redirectTo }}>
  const form = document.getElementById('signupForm');
  const submitBtn = document.getElementById('submitBtn');
  const buttonText = document.getElementById('buttonText');
  const loadingSpinner = document.getElementById('loadingSpinner');
  const messageBox = document.getElementById('messageBox');
  const fullNameInput = document.getElementById('fullName');
  const emailInput = document.getElementById('email');
  const passwordInput = document.getElementById('password');
  const confirmPasswordInput = document.getElementById('confirmPassword');
  const termsInput = document.querySelector('input[name="terms"]');
  const passwordStrength = document.getElementById('passwordStrength');

  const fullNameError = document.getElementById('fullNameError');
  const emailError = document.getElementById('emailError');
  const passwordError = document.getElementById('passwordError');
  const confirmPasswordError = document.getElementById('confirmPasswordError');
  const termsError = document.getElementById('termsError');

  // Validación de nombre
  fullNameInput.addEventListener('blur', () => {
    const fullName = fullNameInput.value.trim();
    if (fullName && fullName.length < 3) {
      fullNameError.textContent = 'El nombre debe tener al menos 3 caracteres';
      fullNameInput.classList.add('error');
    } else if (fullName) {
      fullNameError.textContent = '';
      fullNameInput.classList.remove('error');
    }
  });

  // Validación de email
  emailInput.addEventListener('blur', () => {
    const email = emailInput.value.trim();
    if (email && !isValidEmail(email)) {
      emailError.textContent = 'Por favor, ingresa un correo válido';
      emailInput.classList.add('error');
    } else {
      emailError.textContent = '';
      emailInput.classList.remove('error');
    }
  });

  // Validación de contraseña con medidor de fortaleza
  passwordInput.addEventListener('input', () => {
    const password = passwordInput.value;
    const strength = calculatePasswordStrength(password);
    updatePasswordStrengthIndicator(strength);

    if (password) {
      passwordError.textContent = '';
      passwordInput.classList.remove('error');
    }
  });

  passwordInput.addEventListener('blur', () => {
    const password = passwordInput.value;
    if (password && password.length < 8) {
      passwordError.textContent = 'La contraseña debe tener al menos 8 caracteres';
      passwordInput.classList.add('error');
    }
  });

  // Validación de confirmación de contraseña
  confirmPasswordInput.addEventListener('blur', () => {
    const password = passwordInput.value;
    const confirmPassword = confirmPasswordInput.value;
    if (confirmPassword && password !== confirmPassword) {
      confirmPasswordError.textContent = 'Las contraseñas no coinciden';
      confirmPasswordInput.classList.add('error');
    } else {
      confirmPasswordError.textContent = '';
      confirmPasswordInput.classList.remove('error');
    }
  });

  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    const fullName = fullNameInput.value.trim();
    const email = emailInput.value.trim();
    const password = passwordInput.value;
    const confirmPassword = confirmPasswordInput.value;
    const termsAccepted = termsInput.checked;

    // Limpiar mensajes de error previos
    fullNameError.textContent = '';
    emailError.textContent = '';
    passwordError.textContent = '';
    confirmPasswordError.textContent = '';
    termsError.textContent = '';
    fullNameInput.classList.remove('error');
    emailInput.classList.remove('error');
    passwordInput.classList.remove('error');
    confirmPasswordInput.classList.remove('error');
    messageBox.textContent = '';
    messageBox.className = 'message-box';

    // Validación
    let isValid = true;

    if (!fullName || fullName.length < 3) {
      fullNameError.textContent = 'El nombre debe tener al menos 3 caracteres';
      fullNameInput.classList.add('error');
      isValid = false;
    }

    if (!email || !isValidEmail(email)) {
      emailError.textContent = 'Por favor, ingresa un correo válido';
      emailInput.classList.add('error');
      isValid = false;
    }

    if (!password || password.length < 8) {
      passwordError.textContent = 'La contraseña debe tener al menos 8 caracteres';
      passwordInput.classList.add('error');
      isValid = false;
    }

    if (password !== confirmPassword) {
      confirmPasswordError.textContent = 'Las contraseñas no coinciden';
      confirmPasswordInput.classList.add('error');
      isValid = false;
    }

    if (!termsAccepted) {
      termsError.textContent = 'Debes aceptar los términos de servicio';
      isValid = false;
    }

    if (!isValid) return;

    // Mostrar estado de carga
    submitBtn.disabled = true;
    buttonText.classList.add('hidden');
    loadingSpinner.classList.remove('hidden');

    try {
      const response = await fetch('/api/auth/signup', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          fullName,
          email,
          password,
        }),
      });

      const data = await response.json();

      if (data.success) {
        messageBox.classList.add('success');
        messageBox.textContent = 'Registro exitoso. Redirigiendo...';
        setTimeout(() => {
          window.location.href = redirectTo;
        }, 1500);
      } else {
        messageBox.classList.add('error');
        messageBox.textContent = data.error || 'Error al registrarse';
      }
    } catch (error) {
      messageBox.classList.add('error');
      messageBox.textContent = 'Error de conexión. Por favor, intenta nuevamente.';
      console.error('Error:', error);
    } finally {
      submitBtn.disabled = false;
      buttonText.classList.remove('hidden');
      loadingSpinner.classList.add('hidden');
    }
  });

  function isValidEmail(email) {
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return emailRegex.test(email);
  }

  function calculatePasswordStrength(password) {
    let strength = 0;
    if (password.length >= 8) strength++;
    if (password.length >= 12) strength++;
    if (/[a-z]/.test(password) && /[A-Z]/.test(password)) strength++;
    if (/\d/.test(password)) strength++;
    if (/[!@#$%^&*]/.test(password)) strength++;
    return strength;
  }

  function updatePasswordStrengthIndicator(strength) {
    passwordStrength.className = 'password-strength';
    if (strength === 0) return;

    passwordStrength.style.display = 'flex';
    const colors = ['#ef4444', '#f97316', '#eab308', '#84cc16', '#22c55e'];
    const labels = ['Muy débil', 'Débil', 'Normal', 'Fuerte', 'Muy fuerte'];

    for (let i = 0; i < strength; i++) {
      const bar = document.createElement('div');
      bar.className = 'strength-bar';
      bar.style.backgroundColor = colors[i];
      passwordStrength.appendChild(bar);
    }

    const label = document.createElement('span');
    label.className = 'strength-label';
    label.textContent = labels[strength - 1];
    label.style.color = colors[strength - 1];
    passwordStrength.appendChild(label);
  }
</script>

<style>
  :root {
    --primary: #6366f1;
    --primary-dark: #4f46e5;
    --secondary: #8b5cf6;
    --success: #10b981;
    --error: #ef4444;
    --warning: #f59e0b;
    --dark: #1f2937;
    --light: #f9fafb;
    --border: #e5e7eb;
    --text: #374151;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  .signup-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: 100vh;
    background: linear-gradient(135deg, #f9fafb 0%, #f3f4f6 100%);
  }

  .signup-box {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 3rem 2rem;
    background: white;
    order: 2;
  }

  .signup-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .logo-icon {
    display: inline-block;
    margin-bottom: 1rem;
  }

  .logo-icon svg {
    width: 50px;
    height: 50px;
  }

  .signup-header h1 {
    font-size: 1.875rem;
    font-weight: 700;
    color: var(--dark);
    margin-bottom: 0.5rem;
  }

  .signup-header p {
    color: var(--text);
    font-size: 0.95rem;
  }

  .signup-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-group label {
    font-weight: 600;
    color: var(--dark);
    font-size: 0.9rem;
  }

  .form-group input {
    padding: 0.75rem 1rem;
    border: 2px solid var(--border);
    border-radius: 0.5rem;
    font-size: 1rem;
    font-family: inherit;
    transition: all 0.3s ease;
  }

  .form-group input:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
  }

  .form-group input.error {
    border-color: var(--error);
  }

  .error-message {
    font-size: 0.8rem;
    color: var(--error);
    min-height: 1rem;
  }

  .password-strength {
    display: none;
    gap: 0.25rem;
    align-items: center;
    margin-top: 0.25rem;
  }

  .strength-bar {
    flex: 1;
    height: 4px;
    border-radius: 2px;
  }

  .strength-label {
    font-size: 0.75rem;
    font-weight: 600;
    margin-left: 0.5rem;
  }

  .terms-check {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
    color: var(--text);
    font-size: 0.9rem;
    cursor: pointer;
  }

  .terms-check input {
    width: 18px;
    height: 18px;
    margin-top: 2px;
    cursor: pointer;
    flex-shrink: 0;
  }

  .terms-check a {
    color: var(--primary);
    text-decoration: none;
    font-weight: 500;
  }

  .terms-check a:hover {
    text-decoration: underline;
  }

  .btn-signup {
    padding: 0.875rem 1rem;
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    color: white;
    border: none;
    border-radius: 0.5rem;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    box-shadow: 0 4px 15px rgba(99, 102, 241, 0.4);
    margin-top: 0.5rem;
  }

  .btn-signup:hover:not(:disabled) {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(99, 102, 241, 0.6);
  }

  .btn-signup:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }

  .spinner {
    width: 18px;
    height: 18px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-top-color: white;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  .spinner.hidden {
    display: none;
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  .message-box {
    min-height: 2.5rem;
    padding: 0.75rem 1rem;
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.9rem;
    font-weight: 500;
    text-align: center;
    margin-top: 0.5rem;
  }

  .message-box.success {
    background-color: rgba(16, 185, 129, 0.1);
    color: var(--success);
  }

  .message-box.error {
    background-color: rgba(239, 68, 68, 0.1);
    color: var(--error);
  }

  .message-box:empty {
    display: none;
  }

  .signup-footer {
    text-align: center;
    margin-top: 1.5rem;
    color: var(--text);
    font-size: 0.9rem;
  }

  .signup-footer a {
    color: var(--primary);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s ease;
  }

  .signup-footer a:hover {
    color: var(--primary-dark);
  }

  /* Side section */
  .signup-side {
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    order: 1;
  }

  .side-content {
    text-align: center;
  }

  .side-content h2 {
    font-size: 2.25rem;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .side-content p {
    font-size: 1.125rem;
    margin-bottom: 2rem;
    opacity: 0.95;
  }

  .features-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .features-list li {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 1rem;
  }

  .features-list svg {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .signup-container {
      grid-template-columns: 1fr;
    }

    .signup-side {
      display: none;
    }

    .signup-box {
      padding: 2rem 1rem;
    }

    .signup-header h1 {
      font-size: 1.5rem;
    }
  }

  .hidden {
    display: none;
  }
</style>
